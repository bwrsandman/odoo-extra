<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="view_repo_form" model="ir.ui.view">
      <field name="model">runbot.repo</field>
      <field name="inherit_id" ref="runbot.view_repo_form"/>
      <field name="arch" type="xml">
        <group string="Params">
          <field name="is_addon_repo"/>
          <field name="odoo_core" attrs="{'invisible': [('is_addon_repo', '=', False)], 'required': [('is_addon_repo', '=', True)]}" domain="[('is_addon_repo', '=', False)]"/>
          <field name="needed_repos" attrs="{'invisible': [('is_addon_repo', '=', False)]}" domain="['&amp;', ('is_addon_repo', '=', True), ('id', '!=', id)]">
            <tree>
              <field name="name"/>
            </tree>
          </field>
        </group>
      </field>
    </record>

    <record id="view_repo_tree" model="ir.ui.view">
        <field name="model">runbot.repo</field>
        <field name="inherit_id" ref="runbot.view_repo_tree"/>
        <field name="arch" type="xml">
          <field name="name" position="after">
            <field name="is_addon_repo"/>
          </field>
        </field>
    </record>

</data>
</openerp>
